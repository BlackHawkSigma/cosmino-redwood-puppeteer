datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  Int        @id @default(autoincrement())
  name                String     @unique
  hashedPassword      String
  password            String?
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  userRoles           UserRole[]
}

model UserRole {
  id     Int    @id @default(autoincrement())
  name   String
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?

  @@unique([name, userId])
}
